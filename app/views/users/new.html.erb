<p> Sign-Up </p>


<%= form_for User.new do |f| %>
	<%= f.label :name %>
	<br>
	<%= f.text_field :name %>
	<br>
	<%=f.label :email %>
	<br>
	<%=f.text_field :email %>
	<br>
	<%=f.label :password %>
	<br>
	<%=f.password_field :password %>
	<br>
	<%=f.label :password_confirmation %>
	<br>
	<%=f.password_field	:password_confirmation %>
	<br>
	<%= f.submit "Create Account" %>
<% end %>
<br>
<%= link_to "Back", log_in_path %>
