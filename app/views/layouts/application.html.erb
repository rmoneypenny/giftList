<!DOCTYPE html>
<html>
  <head>
    <title>Giftlist</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul>
      <li class="<%= 'active' if current_page?(mylist_path) %>"><%= link_to 'My List', mylist_path %></li>
      <li class="<%= 'active' if current_page?(others_path) %>"><%= link_to 'Others', others_path %></li>
      <li class="<%= 'active' if current_page?(mypurchases_path) %>"><%= link_to 'Purchases', mypurchases_path %></li>
      <li class="<%= 'active' if current_page?(settings_path) %>"><%= link_to 'Settings', settings_path %></li>
      <li style ="float:right"> <%= link_to "Log Out", log_out_path %> </li>
    </ul>
      <br>
    <div id = "content">
      <%= yield %>
    </div>
  </body>
</html>
