
<% if current_user.id != @item[4] %>
	<br>
	<%= "You do not own this item" %>
	<br>
	<br>
	<%= link_to "Back", mylist_path %>
<% else %>
	<P> Enter Item </p>
	<br>
	<%= form_tag edit_path do %>
		<%= label_tag("Itemname") %>
		<%= text_field_tag(:item_name, @item[0]) %>
		<br>
		<%= label_tag "Price" %>
		<%= number_field_tag(:price, @item[1], :step => 0.01) %>
		<br>
		<%= label_tag "Link" %>
		<%= url_field_tag :link, @item[2] %>
		<br>
		<%= hidden_field_tag(:item_id, @item[3]) %>
		<br>
		<%= submit_tag "Update" %>
	<% end %>
	<br> 
	<%= link_to "Back", mylist_path %>
<% end %>